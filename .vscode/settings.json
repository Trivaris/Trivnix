{
    "nixEnvSelector.nixFile": "${workspaceFolder}/flake/shell.nix",
    "nix.enableLanguageServer": true,
    "nix.serverPath": "nixd",
    "nix.serverSettings": {
        "nixd": {
            "formatting": {
                "command": ["nixfmt"],
            },
            "options" : {
                "nixos": {
                    "expr": "(builtins.getFlake github:trivaris/trivnixConfigs).nixosConfigurations.desktop.options",
                },
                "home-manager": {
                    "expr": "(builtins.getFlake github:trivaris/trivnixConfigs).homeConfigurations.\"trivaris@desktop\".options",
                },
            }
        }
    }
}